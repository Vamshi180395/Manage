<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.manage.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/edusernme"
        android:hint="Username"
        android:layout_above="@+id/edpassword"
        android:layout_alignStart="@+id/edpassword"
        android:layout_alignEnd="@+id/edpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edpassword"
        android:hint="Password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin"
        android:background="@color/highlighted_text_material_dark"
        android:layout_below="@+id/edpassword"
        android:layout_alignStart="@+id/edpassword"
        android:layout_marginTop="65dp"
        android:onClick="loginUser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:id="@+id/btnexitapp"
        android:background="@color/highlighted_text_material_dark"
        android:layout_alignTop="@+id/btnlogin"
        android:layout_alignEnd="@+id/edpassword"
       android:onClick="exitApp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imglogo"
        android:src="@drawable/logo"
        android:layout_above="@+id/edusernme"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
