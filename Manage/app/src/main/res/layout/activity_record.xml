<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.manage.RecordActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name :"
        android:id="@+id/lbl_name"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lbl_phone"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age :"
        android:id="@+id/lbl_age"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/lbl_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lbl_name"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone :"
        android:id="@+id/lbl_phone"
        android:layout_below="@+id/lbl_age"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_toStartOf="@+id/img_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date : "
        android:id="@+id/lbl_date"
        android:layout_below="@+id/lbl_phone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_toStartOf="@+id/txt_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_name"
        android:layout_above="@+id/lbl_age"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lbl_name"
        android:layout_toEndOf="@+id/lbl_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_age"
        android:layout_alignBottom="@+id/lbl_age"
        android:layout_alignEnd="@+id/txt_name"
        android:layout_alignTop="@+id/lbl_age"
        android:layout_toEndOf="@+id/lbl_age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_phone"
        android:layout_alignEnd="@+id/txt_age"
        android:layout_alignBottom="@+id/lbl_phone"
        android:layout_toEndOf="@+id/lbl_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_date"
        android:layout_alignBottom="@+id/lbl_date"
        android:layout_alignEnd="@+id/txt_phone"
        android:layout_alignTop="@+id/lbl_date"
        android:layout_toEndOf="@+id/lbl_phone" />
</RelativeLayout>
